                            <div class="title-row">
                                {{urun.UrunAdi}}
                                <a href="#" ng-click="sepettencikart(urun)"><i class="fa fa-trash pull-right"></i></a>
                            </div>
                            <div class="form-group row no-gutter">
                                <div class="col-xs-12">
                                    <input class="form-control" step="1" type="number" ng-model="urun.Adet" ng-change="adetarttir(urun)">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- end:Order row -->
                    <div class="widget-delivery clearfix">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 b-t-0">
                            <md-switch ng-model="hemenmi" aria-label="Switch 1">
                                <div ng-show="hemenmi" class="label">
                                    Hemen(~{{data.OrtalamaSiparisSuresi}} dk.)
                                </div>
                                <div ng-show="!hemenmi" class="label">
                                    İleri Tarih
                                </div>
                            </md-switch>
                        </div>
                        <div ng-if="!hemenmi" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 b-t-0">
                            <input type="date" ng-model="zaman.tarih" class="form-control" /><br />
                            <input type="time" ng-model="zaman.saat" class="form-control" />
                        </div>
                        <div ng-show="sepettutari>=minimumsiparistutari" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 b-t-0">
                            <md-input-container class="md-block" flex-gt-sm>
                                <label>Ödeme Tipi</label>
                                <md-select ng-model="odemetipi">
                                    <md-option ng-repeat="tip in odemetipleri" value="{{tip.Id}}" >
                                        {{tip.OdemeTipiAdi}}
                                    </md-option>
                                </md-select>
                            </md-input-container>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="price-wrap text-xs-center">
                            <p>Toplam</p>
                            <h3 class="value"><strong>{{sepettutari}} ₺</strong></h3>
                            <div ng-if="sepettutari<minimumsiparistutari">
                                <span class="text text-danger">Sipaiş verebilmeniz için sepetinize {{minimumsiparistutari-sepettutari}}₺ kadar ürün eklemelisiniz</span>
                            </div>
                            <input type="button" ng-show="sepettutari>=minimumsiparistutari" class="btn theme-btn btn-lg" value="Sipariş Ver" ng-click="sepetionayla()" />
